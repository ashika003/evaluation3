<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#1E3A8A">

    <!-- Settings Title -->
    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Theme Toggle Button -->
    <Button
        android:id="@+id/themeToggleButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/switch_to_dark_theme"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3B82F6"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_title" />

    <!-- Currency Change Button -->
    <Button
        android:id="@+id/currencyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/change_currency"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3B82F6"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/themeToggleButton" />

    <!-- Clear Transactions Button -->
    <Button
        android:id="@+id/clearTransactionsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/clear_transactions"
        android:textColor="#FFFFFF"
        android:backgroundTint="#EF4444"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currencyButton" />

    <!-- Password Reset Button -->
    <Button
        android:id="@+id/passwordResetButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/reset_password"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3B82F6"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clearTransactionsButton" />

</androidx.constraintlayout.widget.ConstraintLayout>